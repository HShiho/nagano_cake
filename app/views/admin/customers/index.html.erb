<label>会員一覧</label>

<br>

<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customers| %>
      <tr>
        <td>
          <%= customers.id %>
        </td>
        <td>
          <%= link_to customers.name, admin_item_path(item.id) %>
        </td>
        <td>
          <%= ApplicationHelper.digit_price(item.price) %>
        </td>
        <td>
          <%= item.genre.name %>
        </td>
        <td>
          <%= ApplicationHelper.sale_or_stop(item.is_active) %>
        </td>
      </tr>
  </tbody>
    <% end %>
</table>