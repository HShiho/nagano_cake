<label>
  <%= ApplicationHelper.full_name(@customer.last_name , @customer.first_name) %>さんの会員情報編集
</label>
<br>

<table>
    <tbody>
      <tr>
        <td>会員ID</td>
        <td>
          <%= @customer.id %>
        </td>
      </tr>
      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
        <tr>
          <td>氏名</td>
          <td>
            <%= f.text_field :last_name, placeholder:"姓" %>
            <%= f.text_field :first_name, placeholder:"名" %>
          </td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>
            <%= f.text_field :last_name_kana, placeholder:"セイ" %>
            <%= f.text_field :first_name_kana, placeholder:"メイ" %>
          </td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td>
            <%= f.text_field :postal_code, placeholder:"ハイフンなし" %>
          </td>
        </tr>
        <tr>
          <td>住所</td>
          <td>
            <%= f.text_area :address, placeholder:"ここに住所を記入してください" %>
          </td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td>
            <%= f.text_field :telephone_number, placeholder:"ハイフンなし" %>
          </td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td>
            <%= f.email_field :email, placeholder:"xxxxx@xxx" %>
          </td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
    　　    　<span>
              <%= f.radio_button :is_deleted,"false" %>有効
            </span>
            <span>
              <%= f.radio_button :is_deleted,"true" %>退会
            </span>
          </td>
        </tr>
    </tbody>
  </table>
        <%= f.submit '変更を保存' %>
      <% end %>