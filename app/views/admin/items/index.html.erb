<label>商品一覧</label>

<!--後でプラスマークのボタンリンクに変更する-->
<%= link_to '新規登録',new_admin_item_path %>
<br>

<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= item.id %>
        </td>
        <td>
          <%= link_to item.name, admin_item_path(item.id) %>
        </td>
        <td>
          <%= ApplicationHelper.digit_price(item.price) %>
        </td>
        <td>
          <%= item.genre.name %>
        </td>
        <td>
          <%= ApplicationHelper.sale_or_stop(item.is_active) %>
        </td>
      </tr>
  </tbody>
    <% end %>
</table>