<label>商品一覧</label>
<%= link_to '新規登録',new_admin_item_path %>
<br>

<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= item.id %>
        </td>
        <td>
          <%= item.name %>
        </td>
        <td>
          <%= item.price %>
        </td>
        <td>
          <%= item.genre.name %>
        </td>
        <td>
          <%= item.is_active ? '販売中' : '販売停止中' %>
        </td>
      </tr>
  </tbody>
    <% end %>
</table>