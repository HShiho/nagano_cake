<label>商品編集</label>
<br><br>

<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
  <label>商品画像</label>
    <%= f.file_field :image, accept: "image/*" %>
  <br>
  <label>商品名</label>
    <%= f.text_field :name, placeholder:"商品名" %>
  <br>
  <label>商品説明</label>
    <%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %>
  <br>
  <label>ジャンル</label>
    <%= f.collection_select( :genre_id, @genres, :id, :name, include_blank: "選択してください") %>
  <br>
  <label>税抜価格</label>
    <%= f.number_field :price, placeholder:"1000" %><span>円</span>
  <br>
  <label>販売ステータス</label>
    <label>
      <%= f.radio_button :is_active,"true" %>販売中
    </label>
    <label>
      <%= f.radio_button :is_active,"false" %>販売停止中
    </label>
  <br>
  <%= f.submit '変更を保存' %>
<% end %>
