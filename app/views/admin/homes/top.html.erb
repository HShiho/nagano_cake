<label>注文履歴一覧</label>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to order.created_at,admin_order_path(order.id) %>
        </td>
        <td>
          <%= ApplicationHelper.full_name(order.customer.last_name , order.customer.first_name) %>
        </td>
        <td>
          <%= order.Order_item.sum(:amount) %>
        </td>
        <td>
          <%= order.order_status_i18n %>
        </td>
      </tr>
  </tbody>
    <% end %>
</table>