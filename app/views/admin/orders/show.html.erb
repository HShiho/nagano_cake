<label>注文詳細履歴</label>
<br>
<div>
  <table>
    <tbody>
      <tr>
        <td>購入者</td>
        <td>
          <%= ApplicationHelper.full_name(@order.customer.last_name , @order.customer.first_name) %>
        </td>
      </tr>
      <tr>
        <td>注文日</td>
        <td>
            <%= @order.created_at %>
        </td>
      </tr>
      <tr>
        <td>配送先</td>
        <td>
          <%= @order.customer %>
        </td>
      </tr>
      <tr>
        <td>税込価格<br>（税抜価格）</td>
        <td>
          <%= ApplicationHelper.tax_price(@item.price) %>
          <span>(</span><%= ApplicationHelper.digit_price(@item.price) %><span>)円</span>
        </td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
          <%= ApplicationHelper.sale_or_stop(@item.is_active) %>
        </td>
      </tr>
    </tbody>
  </table>
</div>