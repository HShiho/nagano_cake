<div class="container px-5 px-sm-0 pt-4">

    <div class="col-md-12 row">
      <label class="h4 px-4 bg-light">
        <%= ApplicationHelper.full_name(@order.customer.last_name , @order.customer.first_name) %>さんの注文履歴
      </label>
    </div>

    <div class="pt-4">
      <table class="table table-hover table-inverse col-12">
        <thead class="bg-light">
          <tr>
            <th></th>
            <th>購入日時</th>
            <th></th>
            <th>注文個数</th>
            <th>注文ステータス</th>
            </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td></td>
            <td class="col-3">
              <u><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'),admin_order_path(order.id), class: 'text-dark' %></u>
            </td>
            <td></td>
            <td class="col-3">
              <%= order.order_items.sum(:amount) %>
            </td>
            <td class="col-3">
              <%= order.order_status_i18n %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>

    <%= paginate @orders %>

</div>