<label><%= ApplicationHelper.full_name(@order.customer.last_name , @order.customer.first_name) %>さんの注文履歴</label>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'),admin_order_path(order.id) %>
        </td>
        <td>
          <%= order.order_items.sum(:amount) %>
        </td>
        <td>
          <%= order.order_status_i18n %>
        </td>
      </tr>
  </tbody>
    <% end %>
</table>