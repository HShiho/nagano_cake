<div class="container px-5 px-sm-0 pt-4">

  <div class="col-md-12 row">
    <label class="h4 px-4 bg-light">ジャンル編集</label>
  </div>

  <div class="pt-4">
    <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
      <div class="form-group row">
        <div class="mr-4 pt-2">ジャンル名</div>
        <div class="mx-4 pt-2"> <%= f.text_field :name, placeholder:"ジャンル名" %></div>
        <div class="mx-4"><%= f.submit '変更を保存',class: 'btn btn-success rounded-lg py-2 px-4' %></div>
      </div>
    <% end %>
  </div>

</div>