<div class="container px-5 px-sm-0 pt-4">

  <div class="col-md-12 row">
    <label class="h4 px-4 bg-light">ジャンル一覧・追加</label>
  </div>

  <div class="pt-4">
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="form-group row">
      <div class="mx-4 pt-2">ジャンル名</div>
      <div class="mx-4 pt-2"> <%= f.text_field :name, placeholder:"ジャンル名" %></div>
      <div class="mx-4"><%= f.submit '新規登録',class: 'btn btn-success rounded-lg py-2 px-4' %></div>
    </div>
  <% end %>

    <div class="pt-4">
      <table class="table table-hover table-inverse col-4">
        <thead class="bg-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td class="d-flex align-items-center p-3"><%= genre.name %></td>
            <td class="p-2">
              <%= link_to '編集する',edit_admin_genre_path(genre.id),class: 'btn btn-success rounded-lg py-2 px-3' %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>

</div>