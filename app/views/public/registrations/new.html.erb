<div class="container px-5 px-sm-0 pt-4">

  <div class="col-md-12 row">
    <label class="h4 px-4 bg-light">新規会員登録</label>
  </div>

  <div>
    <%= form_with model: @customer,url: customer_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

    <table class="table table-borderless">
      <tbody>
        <tr>
          <td class="col-3">名前</td>
          <td>（姓）　 <%= f.text_field :last_name,placeholder:"令和",class: "col-4 px-1" %>
          　　（名）　 <%= f.text_field :first_name,placeholder:"道子",class: "col-4 px-1 ml-1" %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>（セイ） <%= f.text_field :last_name_kana,placeholder:"レイワ",class: "col-4 px-1" %>
          　  　（メイ） <%= f.text_field :first_name_kana,placeholder:"ミチコ",class: "col-4 px-1" %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><span class="text-white">（　）　</span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"sample@exanple.com",class: "col-4 px-1" %></td>
        </tr>
        <tr>
          <td>郵便番号（ハイフンなし）</td>
          <td><span class="text-white">（　）　</span>
            <%= f.text_field :postal_code,placeholder:"0000000",class: "col-4 px-1" %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td class="col-8"><span class="text-white">（　）　</span>
            <%= f.text_area :address,placeholder:"東京都渋谷区代々木神園町0-0",class: "col-10 px-1",rows: "1" %></td>
        </tr>
        <tr>
          <td>電話番号（ハイフンなし）</td>
          <td><span class="text-white">（　）　</span>
            <%= f.text_field :telephone_number,placeholder:"00000000000",class: "col-4 px-1" %></td>
        </tr>
         <tr>
          <td>パスワード
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
          </td>
          <td><span class="text-white">（　）　</span>
            <%= f.password_field :password, autocomplete: "new-password",class: "col-4 px-1" %></td>
        </tr>
        <tr>
          <td>パスワード（確認用）</td>
          <td><span class="text-white">（　）　</span>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "col-4 px-1" %></td>
        </tr>
        <tr>
          <td></td>
          <td>
            <div><span class="text-white">（　）　</span>
              <%= f.submit "新規登録",class: 'btn btn-success btn-font-size-lg px-5' %>
            </div>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<div class="col-md-12">
  <label class="h4 px-4 bg-light">既に登録済みの方</label>
  <div class="pl-4 pt-2 pb-4 row">
    <div>
      <u><%= link_to "こちら",new_customer_session_path %></u>
    </div>
    <div>
    　からログインしてください。
    </div>
  </div>
</div>

</div>