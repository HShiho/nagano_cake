<h2>新規会員登録</h2>

<%= form_with model: @customer,url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


  <div class="field">
    <span>名前</span>
    <span>（姓）</span><%= f.text_field :last_name %>
    <span>（名）</span><%= f.text_field :first_name %>
  </div>

  <div class="field">
    <span>フリガナ</span>
    <span>（セイ）</span><%= f.text_field :last_name_kana %>
    <span>（メイ）</span><%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <span>メールアドレス</span>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <span>郵便番号（ハイフンなし）</span>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <span>住所</span>
    <%= f.text_ :address %>
  </div>

  <div class="field">
    <span>電話番号（ハイフンなし）</span>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <span>パスワード</span>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <span>パスワード（確認用）</span>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
