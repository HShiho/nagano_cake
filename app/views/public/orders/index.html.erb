<div class="container px-5 px-sm-0 pt-4 pb-5">

  <div class="pl-5 ml-5">
    <label class="h4 px-4 bg-light">注文履歴一覧</label>
  </div>

<div class="col-12 py-2 mt-5">
    <div class="row d-flex align-items-center ">
      <div class="col-2 border border-dark bg-light px-1 py-3">
        注文日
      </div>
      <div class="col-3 border border-dark bg-light px-1 py-3">
        配送先
      </div>
      <div class="col-2 border border-dark bg-light px-1 py-3">
        注文商品
      </div>
      <div class="col-1 border border-dark bg-light px-1 py-3">
        支払金額
      </div>
      <div class="col-2 border border-dark bg-light px-1 py-3">
        ステータス
      </div>
       <div class="col-2 border border-dark bg-light px-1 py-3">
        注文詳細
      </div>
    </div>
    <% @orders.each do |order| %>
    <div class="row">
      <div class="col-2 border border-dark px-1 py-2 d-flex align-items-center">
        <div>
          <%= order.created_at.strftime('%Y/%m/%d') %>
        </div>
      </div>
      <div class="col-3 border border-dark px-1 py-2 d-flex align-items-center">
        <div>
          <%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
        </div>
      </div>
      <div class="col-2 border border-dark px-1 py-2 d-flex align-items-center">
        <div>
          <% order.order_items.each do |order_item| %>
            <%= order_item.item.name %><br>
          <% end %>
        </div>
      </div>
      <div class="col-1 border border-dark px-1 py-2 d-flex align-items-center">
        <div>
          <%= order.billing_amount %>円
        </div>
      </div>
      <div class="col-2 border border-dark px-1 py-2 d-flex align-items-center">
        <div>
          <%= order.order_status_i18n %>
        </div>
      </div>
      <div class="col-2 border border-dark px-1 py-2 d-flex align-items-center">
        <div class="row col-8 px-0 mx-auto">
          <div class="">
            <%= link_to "表示する",public_order_path(order.id),class: 'btn btn-primary btn-font-size-lg' %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>

</div>