<div class="container px-5 px-sm-0 pt-4 pb-5">
  <div class="pl-5 ml-5">
    <label class="h4 px-4 bg-light">注文情報入力</label>
  </div>

  <%= form_with model: @order, url: public_confirm_path(@order), method: :post do |f| %>
  <div>
    <label class="m-0 h5">
      <b>支払い方法</b>
    </label>
      <div class="form-check mx-3">
        <div><%= f.radio_button :payment_method, "0" %><%= ApplicationRecord.payment_methods_i18n %></div>
        <div><%= f.radio_button :payment_method, "1" %><%= ApplicationRecord.payment_methods_i18n %></div>
      </div>
    <label class="m-0 h5 mt-3">
      <b>お届け先</b>
    </label>
      <div class="form-check mx-3">
        <div><%= f.radio_button :address, :ご自身の住所 %>　ご自身の住所</div>
        <div><%= f.radio_button :address, :登録済み住所から選択 %>　登録済みの住所から選択</div>
        <div><%= f.radio_button :address, :新しいお届け先 %>　新しいお届け先</div>
      </div>
    <div class="col-3 mx-auto my-4">
      <%= f.submit '確認画面に進む',class: 'btn btn-primary py-2 px-3 ml-4' %>
    </div>
  </div>
  <% end %>

</div>