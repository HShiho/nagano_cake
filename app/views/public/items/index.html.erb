<div class="container col-12 px-sm-0 pt-4 row">
  <%= render partial: 'layouts/genre_search',locals: { genres: @genres } %>

  <div class="col-8 mt-3 mx-auto">
    <div class="row">
      <h2 class="py-2">
        <% if @genre.present? %>
          <b><%= @genre.name %>一覧</b>
        <% else %>
          <b>商品一覧</b>
        <% end %>
      </h2>
      <p class="h5 py-4 d-flex align-items-end">（全<%= @items.each.count %>件）</p>
    </div>
    <div class="row">
      <% @items.each do |item| %>
          <div class="col-3">
            <%= link_to public_item_path(item.id) do %>
              <div><%= image_tag item.get_image(200,200) %></div>
            <% end %>
            <div><b><%= item.name %></b></div>
            <div><b>¥<%= item.taxin_price.round.to_s(:delimited) %></b></div>
          </div>
      <% end %>
    </div>
  </div>

</div>